<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".FindMechanic">

    <ImageView
        android:id="@+id/backfm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/fm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/fredoka_one"
        android:text="@string/find_a_mechanic"
        android:textColor="@color/mygreen"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/findmecbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/findmechbutton" />

    <FrameLayout
        android:layout_width="330dp"
        android:layout_height="500dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/search">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/customername"
                    android:layout_width="230dp"
                    android:layout_height="70dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/username"
                    android:ems="20"
                    android:fontFamily="@font/fredoka_one"
                    android:hint=" Name"
                    android:inputType="text"
                    android:textColor="@color/faintblack"
                    android:textColorHint="@color/faintblack"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/vehicletype"
                    android:layout_width="230dp"
                    android:layout_height="70dp"
                    android:layout_margin="20dp"
                    android:background="@drawable/username"
                    android:ems="20"
                    android:fontFamily="@font/fredoka_one"
                    android:hint=" Type (bike/car)"
                    android:inputType="text"
                    android:textColor="@color/faintblack"
                    android:textColorHint="@color/faintblack"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/model"
                    android:layout_width="230dp"
                    android:layout_height="70dp"
                    android:layout_margin="25dp"
                    android:background="@drawable/username"
                    android:ems="10"
                    android:fontFamily="@font/fredoka_one"
                    android:hint=" Model"
                    android:inputType="text"
                    android:textColor="@color/faintblack"
                    android:textColorHint="@color/faintblack"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/vehicleno"
                    android:layout_width="230dp"
                    android:layout_height="70dp"
                    android:layout_margin="25dp"
                    android:background="@drawable/username"
                    android:ems="10"
                    android:fontFamily="@font/fredoka_one"
                    android:hint=" Vehicle No."
                    android:inputType="text"
                    android:textColor="@color/faintblack"
                    android:textColorHighlight="@color/faintblack"
                    android:textColorHint="@color/faintblack"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/prblmdesc"
                    android:layout_width="230dp"
                    android:layout_height="250dp"
                    android:layout_margin="25dp"
                    android:background="@drawable/username"
                    android:ems="10"
                    android:gravity="start"
                    android:fontFamily="@font/fredoka_one"
                    android:hint=" Problem description"
                    android:inputType="textMultiLine"
                    android:textColor="@color/faintblack"
                    android:textColorHint="@color/faintblack"
                    android:textSize="24sp" />
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

</RelativeLayout>