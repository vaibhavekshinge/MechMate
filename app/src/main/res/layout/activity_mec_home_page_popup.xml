<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mechomepageblur"
    tools:context=".mecHomePagePopup">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="380dp"
        android:layout_marginTop="156dp"
        android:background="@drawable/mechanicmaptext"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/CusName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:width="10dp"
            android:fontFamily="@font/fredoka_one"
            android:text="Vaibhav Ekshinge"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/CusVechileNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:width="10dp"
            android:fontFamily="@font/fredoka_one"
            android:text="MH09VE1800"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/CusModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:width="10dp"
            android:fontFamily="@font/fredoka_one"
            android:text="Car, Thar"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/CusDist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:width="10dp"
            android:fontFamily="@font/fredoka_one"
            android:text="Approx. 18 Km"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:width="10dp"
            android:fontFamily="@font/fredoka_one"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/CusPrblm"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:width="10dp"
            android:fontFamily="@font/fredoka_one"
            android:text="My front tyre is jam,  I think disc is jam, not ableto move from one place to another"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/RejectReq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/reject" />

            <ImageView
                android:id="@+id/AcceptReq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/accept" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>