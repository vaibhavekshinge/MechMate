<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MechanicRegistration">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/back" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/fredoka_one"
        android:text="Mechanic Registration"
        android:textColor="@color/mygreen"
        android:textSize="28sp" />

    <ImageView
        android:id="@+id/submit1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/submit" />

    <FrameLayout
        android:layout_width="330dp"
        android:layout_height="500dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/search">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/mecname"
                    android:layout_width="230dp"
                    android:layout_height="70dp"
                    android:layout_margin="25dp"
                    android:background="@drawable/username"
                    android:ems="20"
                    android:fontFamily="@font/fredoka_one"
                    android:hint=" Name"
                    android:inputType="text"
                    android:textColor="@color/faintblack"
                    android:textColorHint="@color/faintblack"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/shoploc"
                    android:layout_width="230dp"
                    android:layout_height="70dp"
                    android:layout_margin="25dp"
                    android:background="@drawable/username"
                    android:ems="20"
                    android:fontFamily="@font/fredoka_one"
                    android:hint=" Shop Location"
                    android:inputType="text"
                    android:textColor="@color/faintblack"
                    android:textColorHint="@color/faintblack"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/mobno"
                    android:layout_width="230dp"
                    android:layout_height="70dp"
                    android:layout_margin="25dp"
                    android:background="@drawable/username"
                    android:ems="10"
                    android:fontFamily="@font/fredoka_one"
                    android:hint=" Mobile No."
                    android:inputType="phone"
                    android:textColor="@color/faintblack"
                    android:textColorHint="@color/faintblack"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/adhar"
                    android:layout_width="230dp"
                    android:layout_height="70dp"
                    android:layout_margin="25dp"
                    android:background="@drawable/username"
                    android:ems="10"
                    android:fontFamily="@font/fredoka_one"
                    android:hint=" Adahar Card No."
                    android:inputType="number"
                    android:textColor="@color/faintblack"
                    android:textColorHighlight="@color/faintblack"
                    android:textColorHint="@color/faintblack"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/shopname"
                    android:layout_width="230dp"
                    android:layout_height="70dp"
                    android:layout_margin="25dp"
                    android:background="@drawable/username"
                    android:ems="10"
                    android:fontFamily="@font/fredoka_one"
                    android:hint=" Shop Name"
                    android:inputType="text"
                    android:textColor="@color/faintblack"
                    android:textColorHint="@color/faintblack"
                    android:textSize="24sp" />
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</RelativeLayout>